<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:textSize">@dimen/textsize_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/main_btn_bg</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal_btn</item>
        <item name="android:paddingRight">@dimen/padding_horizontal_btn</item>
        <item name="android:minHeight">@dimen/height_btn_min</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>


    <style name="ButtonInfo">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="TextPopupTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_popup_title</item>
    </style>

    <style name="TextPopup">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_popup</item>
    </style>

    <style name="buttonBack">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:drawableStart">@drawable/menu_arrow</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>


</resources>