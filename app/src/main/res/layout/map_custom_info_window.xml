<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg">

    <LinearLayout
        android:layout_width="@dimen/popup_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextPopupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/popup_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_custom_info_window"
            style="@style/TextPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/popup_txt_margin_top"
            android:gravity="center_horizontal"
            android:text="@string/popup_address" />

        <TextView
            style="@style/TextPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/popup_txt_margin_top"
            android:gravity="center_horizontal"
            android:text="@string/popup_info" />
    </LinearLayout>
</RelativeLayout>